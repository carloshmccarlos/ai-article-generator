{
  "name": "ai-article-generator",
  "private": true,
  "type": "module",
  "description": "An AI-powered article generator that creates professional, engaging content from user-provided keywords and topics. Built with React, TanStack Router, and modern web technologies.",
  "scripts": {
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface Env",
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "check": "pnpm format && pnpm lint && pnpm check-types",
    "db": "drizzle-kit",
    "deps": "pnpm dlx taze@latest -Ilw",
    "deps:major": "pnpm dlx taze@latest major -Ilw",
    "ui": "pnpm dlx shadcn@latest"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.13.4",
    "@google/genai": "^1.20.0",
    "@neondatabase/serverless": "^1.0.1",
    "@netlify/vite-plugin-tanstack-start": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.132.2",
    "@tanstack/react-router-devtools": "^1.132.2",
    "@tanstack/react-router-ssr-query": "^1.132.2",
    "@tanstack/react-start": "^1.132.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.542.0",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "valibot": "^1.1.0",
    "vite": "^7.1.7",
    "wrangler": "^4.39.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/devtools-vite": "^0.2.14",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "babel-plugin-react-compiler": "latest",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
